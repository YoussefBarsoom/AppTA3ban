<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
    <View android:id="@+id/id_post" android:layout_height="wrap_content" android:layout_width="match_parent"
          tools:ignore="MissingConstraints">
        <LinearLayout android:layout_height="wrap_content"
                      android:id="@+id/post_view"
                      android:layout_width="match_parent"
                      tools:ignore="MissingConstraints" android:orientation="vertical">
            <TextView android:layout_height="50dp"
                      android:layout_width="match_parent"
                      android:text="@string/trail"
                      android:textColor="@color/colorPrimaryDark"
                      android:textSize="25dp"
            />
            <ImageView android:layout_width="match_parent"
                       android:layout_height="300dp"/>
            <LinearLayout android:layout_height="wrap_content"
                          android:layout_width="match_parent" tools:ignore="MissingConstraints"
                          android:layout_alignParentBottom="true">
                <Button android:text="@string/but_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Button android:text="@string/but_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Space
                        android:layout_weight="2" android:layout_height="match_parent"
                        android:layout_width="match_parent"/>
                <Button android:text="@string/but_com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </View>
</android.support.constraint.ConstraintLayout>